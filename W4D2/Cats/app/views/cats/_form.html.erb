<% if action == :edit %>
  <h1>Edit the cat here!</h1>
<% else %>
  <h1>Add your cat here!</h1>
<% end %>

<% if action == :edit %>
  <% url = cat_url(cat) %>
<% else %>
  <% url = cats_url %>
<% end %>

<form action="<%=url%>" method="post">
<% if action == :edit %>
  <input type="hidden" name="_method" value="PATCH">
<% end %>

  <label for="name">Name:</label>
  <input id="name" type="text" name="cat[name]" value="<%=cat.name%>">
  <br><br>

  <label for="sex">Sex:</label>
  M<input id="sex" type="radio" name="cat[sex]" value="m" <%=cat.sex == 'm' ? "checked" : "" %>>
  F<input id="sex" type="radio" name="cat[sex]" value="f" <%=cat.sex == 'f' ? "checked" : "" %>>
  <br><br>

  <label for="color">Color:</label>
  <select id="color" name="cat[color]">
    <option disabled>--Please select--</option>
    <option value="red" <%=cat.color == "red" ? "selected" : "" %>>Red</option>
    <option value="black" <%=cat.color == "black" ? "selected" : "" %>>Black</option>
    <option value="brown" <%=cat.color == "brown" ? "selected" : "" %>>Brown</option>
    <option value="grey" <%=cat.color == "grey" ? "selected" : "" %>>Grey</option>
    <option value="white" <%=cat.color == "white" ? "selected" : "" %>>White</option>
  </select>
  <br><br>


  <label for="birth_date">Birth Date:</label>
  <input id="birth_date" type="date" name="cat[birth_date]" value="<%=cat.birth_date%>">
  <br><br>

  <label>Description
      <textarea name="cat[description]"><%=cat.description%></textarea>
  </label>
  <br><br>

<% if action == :edit %>
  <input type="submit" value="Edit this cat">
<% else %>
  <input type="submit" value="Add this cat">
<% end %>

</form>
