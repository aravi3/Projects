
    <h1><%= @cat.name %></h1>

    <table border="2">

      <tr>
        <td style="font-weight:bold">Color</td>
        <td><%= @cat.color %></td>
      </tr>
      <tr>
        <td style="font-weight:bold">Sex</td>
        <td><%= @cat.sex %></td>
      </tr>
      <tr>
        <td style="font-weight:bold">Birth Date</td>
        <td><%= @cat.birth_date %></td>
      </tr>
      <tr>
        <td style="font-weight:bold">Description</td>
        <td><%= @cat.description %></td>
      </tr>

    </table>
    <br><br>


    <h2>Rental requests for <%= @cat.name %></h2>

      <table border="2">
        <tr style="font-weight:bold">
          <td>Request ID</td>
          <td>Start Date</td>
          <td>End Date</td>
          <td>Status</td>
          <td>Action</td>
        <tr>

        <% @requests.each do |request| %>
          <tr>
            <td><%= request.id %></td>
            <td><%= request.start_date %></td>
            <td><%= request.end_date %></td>
            <td><%= request.status %></td>
            <% if request.pending? %>
              <td>
                <%= button_to "Approve", approve_cat_rental_request_url(request), method: :patch%>
                <%= button_to "Deny", deny_cat_rental_request_url(request), method: :patch%>
              </td>

            <% else %>
              <td></td>
            <% end %>

          </tr>
        <% end %>

    </table>
