
<h1>Create cat rental request!</h1>

<form action="/cat_rental_requests" method="post">
  <label for="cat_id">Cats:</label>
  <select id="cat_id" name="cat_rental_request[cat_id]">
    <option disabled selected>--Please select--</option>
    <% @cats.each do |cat| %>
      <option value="<%= cat.id %>"><%= cat.name %></option>
    <% end %>
  </select>
  <br><br>

  <label for="start_date">Request Start Date:</label>
  <input id="start_date" type="date" name="cat_rental_request[start_date]">
  <br><br>

  <label for="end_date">Request End Date:</label>
  <input id="end_date" type="date" name="cat_rental_request[end_date]">
  <br><br>

  <input type="submit" value="Submit this request">
</form>
